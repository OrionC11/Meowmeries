<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{user.name}}'s Profile - Meowsmeries</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <nav>
            <!-- Top Navigation Bar -->
            <div id="navbar">
                <a href="/home">Home</a>
                <a href="/friends">Friends</a>
                <a href="/messages">Messages</a>
                <a href="/settings">Settings</a>
                <a href="/logout">Logout</a>
            </div>
        </nav>
    </header>
    <main>
        <!-- Profile Section -->
        <section id="profile-info">
            <img src="{{user.profilePicture}}" alt="{{user.name}}'s Profile Picture" class="profile-picture">
            <h1>{{user.name}}</h1>
            <p>{{user.bio}}</p>
        </section>
        
        <!-- Posts Section -->
        <section id="posts">
            {{#each user.posts}}
                <article class="post">
                    <h2>{{this.title}}</h2>
                    <p>{{this.content}}</p>
                    <span>Posted on {{this.date}}</span>
                </article>
            {{/each}}
        </section>

        <!-- Other Sections -->
        

    </main>
</body>
</html>
