<section id="profile-info">
  <img src="https://cataas.com/cat" 
    class="profile-cat"
    alt="Random Cat Pictures" />
  <h2 class="profile-fn"  >Full Name: {{user.first_name}} {{user.last_name}}</h2>
  <h3 class="profile-cn">{{user.first_name}}'s cat: {{user.cat_name}}</h3>
  <p class="profile-ca">{{user.cat_name}}'s Age: {{user.cat_age}}</p>
  <p class="profile-cb">{{user.cat_name}}'s Breed: {{user.cat_breed}}</p>
</section>
<section id="posts">
{{#each user.posts as |post|}}
  <article class="post">
    <div class="post-header">
      <!-- Small text area for post title or user's name -->
      <h2>{{post.title}}</h2>
      <h3>{{post.username}}</h3>

    </div>
    <div class="post-content"> 
      <div class="post-image">
        
      </div>
      <div class="post-body">
        <!-- Larger text area for the content of the post -->
        <p class="post-text">{{post.content}}</p>
        <!-- Add other post content like buttons or links -->
      </div>
    </div>
  </article>
{{else}}
  <p>No posts to display.</p>
{{/each}}